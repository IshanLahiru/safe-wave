# ===== SAFE WAVE API ENVIRONMENT CONFIGURATION =====
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real secrets to version control!

# ===== ENVIRONMENT SETTINGS =====
# Environment: development, staging, production
ENVIRONMENT=development
# Enable debug mode (should be false in production)
DEBUG=false

# ===== DATABASE CONFIGURATION =====
# PostgreSQL connection details
POSTGRES_DB=safewave
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_db_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# Alternative: provide complete database URL instead of individual components
# DATABASE_URL=postgresql://user:password@localhost:5433/safewave

# ===== JWT CONFIGURATION =====
# REQUIRED: Cryptographically secure secret key (minimum 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_jwt_secret_key_minimum_32_characters_long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===== API CONFIGURATION =====
API_V1_STR=/api/v1
PROJECT_NAME=Safe Wave API
HOST=0.0.0.0
PORT=9000
API_PORT=9000

# ===== CORS CONFIGURATION =====
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8081,http://localhost:8082

# ===== AI/LLM CONFIGURATION =====
# OpenAI API key (legacy support)
OPENAI_API_KEY=your_openai_api_key_here

# OpenRouter API key (primary LLM provider)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=openai/gpt-3.5-turbo
OPENROUTER_MAX_TOKENS=1000
OPENROUTER_TEMPERATURE=0.3

# AI feature toggles
USE_LOCAL_MODELS=false
COST_OPTIMIZATION=true

# ===== EMAIL CONFIGURATION =====
# SMTP settings for email functionality
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
FROM_EMAIL=noreply@safewave.com

# ===== FILE STORAGE CONFIGURATION =====
UPLOAD_BASE_DIR=uploads
AUDIO_UPLOAD_DIR=uploads/audio
DOCUMENT_UPLOAD_DIR=uploads/documents
MAX_FILE_SIZE=104857600
ALLOWED_AUDIO_FORMATS=["mp3","wav","m4a","aac","ogg","flac","webm"]
ALLOWED_DOCUMENT_FORMATS=["pdf","doc","docx","txt","rtf"]

# ===== AUDIO PROCESSING CONFIGURATION =====
AUDIO_CHUNK_SIZE=8192
ENABLE_AUDIO_STREAMING=true
ENABLE_TRANSCRIPTION=true
ENABLE_LLM_ANALYSIS=true

# ===== SECURITY CONFIGURATION =====
RATE_LIMIT_PER_MINUTE=60
SESSION_TIMEOUT_MINUTES=30

# ===== NOTES =====
# 1. Replace all placeholder values with your actual configuration
# 2. Generate secure random values for SECRET_KEY and passwords
# 3. Use app passwords for Gmail SMTP (not your regular password)
# 4. Update CORS_ORIGINS for your production domains
# 5. Set DEBUG=false and ENVIRONMENT=production for production deployments
