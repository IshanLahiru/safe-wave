{
  "name": "safe-wave-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Safe Wave monorepo with Turborepo",
  "workspaces": [
    "app/native",
    "services/backend"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:frontend": "turbo run dev --filter=native",
    "dev:backend": "turbo run dev --filter=backend",
    "dev:all": "turbo run dev",
    "build": "turbo run build",
    "build:frontend": "turbo run build --filter=native",
    "lint": "turbo run lint",
    "lint:frontend": "turbo run lint --filter=native",
    "lint:backend": "turbo run lint --filter=backend",
    "format": "turbo run format",
    "format:frontend": "turbo run format --filter=native",
    "format:backend": "turbo run format --filter=backend",
    "format:check": "turbo run format:check",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "update-ip": "turbo run update-ip --filter=backend",
    "migration:new": "turbo run migration:new --filter=backend",
    "migration:run": "turbo run migration:run --filter=backend",
    "migration:rollback": "turbo run migration:rollback --filter=backend",
    "migration:history": "turbo run migration:history --filter=backend",
    "migration:current": "turbo run migration:current --filter=backend",
    "migration:status": "turbo run migration:status --filter=backend",
    "migration:recreate": "turbo run migration:recreate --filter=backend",
    "migration:uncommit": "turbo run migration:uncommit --filter=backend",
    "db:reset": "turbo run db:reset --filter=backend",
    "db:recreate": "turbo run db:recreate --filter=backend",
    "docker:up": "cd services/backend && docker-compose up -d",
    "docker:down": "cd services/backend && docker-compose down",
    "docker:stop": "cd services/backend && docker-compose stop",
    "docker:restart": "cd services/backend && docker-compose restart",
    "docker:logs": "cd services/backend && docker-compose logs -f",
    "docker:ps": "cd services/backend && docker-compose ps",
    "kill:port": "cd services/backend && python scripts/kill_port.py",
    "kill:port:force": "cd services/backend && python scripts/kill_port.py --force",
    "kill:all": "cd services/backend && python scripts/kill_port.py --all",
    "kill:list": "cd services/backend && python scripts/kill_port.py --list"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
